<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <Button
        android:id="@+id/btn_post_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="post event in main thread" />

    <Button
        android:id="@+id/btn_post_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_post_main"
        android:text="post event in new thread" />

    <Button
        android:id="@+id/btn_post_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_post_new"
        android:text="post event object" />


</RelativeLayout>
