<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="158px"
        android:orientation="horizontal">

        <com.sunfusheng.glideimageview.GlideImageView
            android:id="@+id/iv_head"
            android:layout_width="156px"
            android:layout_height="104px"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20px"
            android:src="@drawable/pic_defaultads"
            android:layout_marginRight="16px"
           />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="148px"
          >


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16px"

            >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="冬病夏治避免3大误区"
                android:textSize="14sp"
                android:textColor="#272031"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4px"



                />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="艾草是什么？教你正确选艾草。"
                android:textSize="24px"
                android:textColor="#81868c"
                android:singleLine="true"
                android:layout_marginTop="8px"

                />
        </LinearLayout>
        >
            <TextView
                android:id="@+id/timetv"
                android:layout_marginTop="68px"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="24px"
                android:textColor="#7e7e7e"
                />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_height="2px"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#e1e1e2" />

</LinearLayout>
